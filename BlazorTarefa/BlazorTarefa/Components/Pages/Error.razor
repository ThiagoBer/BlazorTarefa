@page "/Error"
@using System.Diagnostics

<PageTitle>Error</PageTitle>

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Ocorreu um erro na requisição.</h2>

@if (ShowRequestId)
{
    <p>
        <strong>ID da Requisição:</strong> <code>@RequestId</code>
    </p>
}

<h3>Modo Desenvolvedor</h3>
<p>
    Trocar para o ambiente de <strong>Desenvolvimento</strong> mostrará mais informações'.
</p>

@code{
    [CascadingParameter]
    private HttpContext? HttpContext { get; set; }

    private string? RequestId { get; set; }
    private bool ShowRequestId => !string.IsNullOrEmpty(RequestId);

    protected override void OnInitialized() =>
        RequestId = Activity.Current?.Id ?? HttpContext?.TraceIdentifier;
}
